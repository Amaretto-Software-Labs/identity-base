{
  "name": "@identity-base/react-client",
  "version": "0.4.0",
  "description": "Headless React authentication client for Identity.Base",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "node ../scripts/build-core-if-present.cjs",
    "build": "tsup src/index.ts --format cjs,esm --dts --clean --external react --external react-dom --external @identity-base/client-core",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch --external react --external react-dom --external @identity-base/client-core",
    "test": "npm run build && node --test test/*.test.mjs",
    "coverage": "npm run build && c8 --check-coverage --lines 25 --functions 20 --branches 40 --reporter=text --reporter=lcov node --test test/*.test.mjs",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run typecheck"
  },
  "keywords": [
    "react",
    "authentication",
    "oauth2",
    "pkce",
    "identity",
    "headless"
  ],
  "author": "Identity Base",
  "license": "MIT",
  "dependencies": {
    "@identity-base/client-core": "file:../identity-client-core"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "c8": "^10.1.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-test-renderer": "^19.1.1",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Amaretto-Software-Labs/identity-base"
  }
}

{
  "name": "@identity-base/angular-client",
  "version": "0.4.0",
  "description": "Angular authentication client for Identity.Base (built on @identity-base/client-core).",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "node ../scripts/build-core-if-present.cjs",
    "build": "tsup src/index.ts --format cjs,esm --dts --clean --external @angular/core --external @angular/common --external @angular/common/http --external @angular/router --external rxjs --external rxjs/operators --external @identity-base/client-core",
    "test": "npm run build && node --test test/*.test.mjs",
    "coverage": "npm run build && c8 --check-coverage --lines 80 --functions 80 --branches 80 --reporter=text --reporter=lcov node --test test/*.test.mjs",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run typecheck"
  },
  "keywords": [
    "angular",
    "authentication",
    "oauth2",
    "pkce",
    "identity"
  ],
  "author": "Identity Base",
  "license": "MIT",
  "dependencies": {
    "@identity-base/client-core": "file:../identity-client-core"
  },
  "peerDependencies": {
    "@angular/common": "^16.0.0 || ^17.0.0 || ^18.0.0 || ^19.0.0 || ^20.0.0 || ^21.0.0",
    "@angular/core": "^16.0.0 || ^17.0.0 || ^18.0.0 || ^19.0.0 || ^20.0.0 || ^21.0.0",
    "@angular/router": "^16.0.0 || ^17.0.0 || ^18.0.0 || ^19.0.0 || ^20.0.0 || ^21.0.0",
    "rxjs": "^7.0.0"
  },
  "devDependencies": {
    "c8": "^10.1.3",
    "tsup": "^8.5.0",
    "typescript": "~5.8.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Amaretto-Software-Labs/identity-base"
  }
}

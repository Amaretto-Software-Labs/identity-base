{
  "name": "@identity-base/angular-client",
  "version": "0.4.0",
  "description": "Angular authentication client for Identity.Base (built on @identity-base/client-core).",
  "main": "dist/fesm2022/identity-base-angular-client.mjs",
  "module": "dist/fesm2022/identity-base-angular-client.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "node ../scripts/build-core-if-present.cjs",
    "build": "ng-packagr -p ng-package.json -c tsconfig.lib.json",

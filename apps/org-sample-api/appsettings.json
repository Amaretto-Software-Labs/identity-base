{
  "ConnectionStrings": {
    "Primary": "Host=localhost;Port=5432;Database=identity_org_sample;Username=postgres;Password=P@ssword123"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Cors": {
    "AllowedOrigins": [
      "https://localhost:5173",
      "http://localhost:5173"
    ]
  },
  "IdentitySeed": {
    "Enabled": true,
    "Email": "admin@example.com",
    "Password": "Passw0rd!Passw0rd!",
    "Roles": [
      "IdentityAdmin"
    ]
  },
  "Registration": {
    "ConfirmationUrlTemplate": "http://localhost:5173/auth/confirm?token={token}&userId={userId}",
    "PasswordResetUrlTemplate": "http://localhost:5173/auth/reset?token={token}&userId={userId}",
    "ProfileFields": [
      {
        "Name": "organisationName",
        "DisplayName": "Organisation Name",
        "Required": true,
        "MaxLength": 128
      }
    ]
  },
  "Invitations": {
    "RegisterUrlTemplate": "http://localhost:5173/register?invite={code}",
    "ClaimUrlTemplate": "http://localhost:5173/invitations/claim?code={code}"
  },
  "OpenIddict": {
    "ServerKeys": {
      "Provider": "Development"
    },
    "Applications": [
      {
        "ClientId": "org-sample-client",
        "ClientType": "public",
        "RedirectUris": [
          "http://localhost:5173/auth/callback"
        ],
        "Permissions": [
          "endpoints:authorization",
          "endpoints:token",
          "endpoints:userinfo",
          "grant_types:authorization_code",
          "grant_types:refresh_token",
          "response_types:code",
          "scopes:openid",
          "scopes:profile",
          "scopes:email",
          "scopes:offline_access",
          "scopes:identity.api"
        ],
        "Requirements": [
          "requirements:pkce"
        ]
      }
    ],
    "Scopes": [
      {
        "Name": "identity.api",
        "DisplayName": "Identity API",
        "Resources": [
          "identity.api"
        ]
      }
    ]
  },
  "Mfa": {
    "Issuer": "Identity Base Sample",
    "Email": {
      "Enabled": false
    },
    "Sms": {
      "Enabled": false,
      "FromPhoneNumber": "+15005550006",
      "AccountSid": "",
      "AuthToken": ""
    }
  },
  "Permissions": {
    "Definitions": [
      { "Name": "organisations.read", "Description": "View organisation list." },
      { "Name": "organisations.manage", "Description": "Create and manage organisations." },
      { "Name": "organisation.members.read", "Description": "View organisation members." },
      { "Name": "organisation.members.manage", "Description": "Manage organisation members." },
      { "Name": "organisation.roles.read", "Description": "View organisation roles." },
      { "Name": "organisation.roles.manage", "Description": "Manage organisation roles." },
      { "Name": "users.read", "Description": "View user directory." },
      { "Name": "users.manage", "Description": "Manage user accounts." }
    ]
  },
  "Roles": {
    "Definitions": [
      {
        "Name": "IdentityAdmin",
        "Description": "Global administrator with access to admin APIs.",
        "Permissions": [
          "users.read",
          "users.manage",
          "organisations.manage",
          "organisation.members.manage",
          "organisation.roles.manage"
        ],
        "IsSystemRole": true
      }
    ]
  },
  "SampleData": {
    "DefaultOrganisation": {
      "Slug": "contoso",
      "DisplayName": "Contoso Ltd",
      "Metadata": {
        "industry": "SaaS",
        "timezone": "UTC"
      }
    }
  }
}

{
  "ConnectionStrings": {
    "Primary": "Host=localhost;Port=5432;Database=identity_org_sample;Username=postgres;Password=postgres"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Cors": {
    "AllowedOrigins": [
      "https://localhost:5173",
      "http://localhost:5173"
    ]
  },
  "IdentitySeed": {
    "Enabled": true,
    "Email": "admin@example.com",
    "Password": "Passw0rd!Passw0rd!",
    "Roles": [
      "IdentityAdmin"
    ]
  },
  "Registration": {
    "ConfirmationUrlTemplate": "https://localhost:5173/auth/confirm?token={token}&email={email}",
    "PasswordResetUrlTemplate": "https://localhost:5173/auth/reset?token={token}&email={email}",
    "ProfileFields": [
      {
        "Name": "displayName",
        "DisplayName": "Display Name",
        "Required": true,
        "MaxLength": 128
      },
      {
        "Name": "organizationSlug",
        "DisplayName": "Organization Slug",
        "Required": true,
        "MaxLength": 64,
        "Pattern": "^[a-z0-9][a-z0-9-_.]*$"
      },
      {
        "Name": "organizationName",
        "DisplayName": "Organization Name",
        "Required": true,
        "MaxLength": 128
      },
      {
        "Name": "organization.metadata.industry",
        "DisplayName": "Organization Industry",
        "Required": false,
        "MaxLength": 64
      },
      {
        "Name": "organization.metadata.timezone",
        "DisplayName": "Organization Timezone",
        "Required": false,
        "MaxLength": 64
      }
    ]
  },
  "OpenIddict": {
    "ServerKeys": {
      "Provider": "Development"
    },
    "Applications": [
      {
        "ClientId": "org-sample-client",
        "ClientType": "public",
        "RedirectUris": [
          "http://localhost:5173/auth/callback"
        ],
        "Permissions": [
          "endpoints:authorization",
          "endpoints:token",
          "endpoints:userinfo",
          "grant_types:authorization_code",
          "grant_types:refresh_token",
          "response_types:code",
          "scopes:openid",
          "scopes:profile",
          "scopes:email",
          "scopes:offline_access",
          "scopes:identity.api"
        ],
        "Requirements": [
          "requirements:pkce"
        ]
      }
    ]
  },
  "MailJet": {
    "Enabled": false,
    "FromEmail": "noreply@example.com",
    "FromName": "Identity Base Sample",
    "ApiKey": "",
    "ApiSecret": "",
    "Templates": {
      "Confirmation": 0,
      "PasswordReset": 0,
      "MfaChallenge": 0
    }
  },
  "Mfa": {
    "Issuer": "Identity Base Sample",
    "Email": {
      "Enabled": false
    },
    "Sms": {
      "Enabled": false,
      "FromPhoneNumber": "+15005550006",
      "AccountSid": "",
      "AuthToken": ""
    }
  },
  "Permissions": {
    "Definitions": [
      { "Name": "organizations.read", "Description": "View organization list." },
      { "Name": "organizations.manage", "Description": "Create and manage organizations." },
      { "Name": "organization.members.read", "Description": "View organization members." },
      { "Name": "organization.members.manage", "Description": "Manage organization members." },
      { "Name": "organization.roles.read", "Description": "View organization roles." },
      { "Name": "organization.roles.manage", "Description": "Manage organization roles." },
      { "Name": "users.read", "Description": "View user directory." },
      { "Name": "users.manage", "Description": "Manage user accounts." }
    ]
  },
  "Roles": {
    "Definitions": [
      {
        "Name": "IdentityAdmin",
        "Description": "Global administrator with access to admin APIs.",
        "Permissions": [
          "users.read",
          "users.manage",
          "organizations.manage",
          "organization.members.manage",
          "organization.roles.manage"
        ],
        "IsSystemRole": true
      }
    ]
  },
  "SampleData": {
    "DefaultOrganization": {
      "Slug": "contoso",
      "DisplayName": "Contoso Ltd",
      "Metadata": {
        "industry": "SaaS",
        "timezone": "UTC"
      }
    }
  }
}

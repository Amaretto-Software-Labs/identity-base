# Database connection string consumed by ConnectionStrings__Primary
CONNECTIONSTRINGS__PRIMARY=Host=postgres;Port=5432;Database=identity;Username=identity;Password=identity

# MailJet credentials and template ids (replace with real values)
MAILJET__APIKEY=your-mailjet-api-key
MAILJET__APISECRET=your-mailjet-api-secret
MAILJET__FROMEMAIL=noreply@example.com
MAILJET__FROMNAME=Identity Base
MAILJET__TEMPLATES__CONFIRMATION=1000000
MAILJET__TEMPLATES__PASSWORDRESET=1000001
MAILJET__TEMPLATES__MFACHALLENGE=1000002

# MFA issuer label
MFA__ISSUER=Identity Base

# Optional: enable Google sign-in
EXTERNALPROVIDERS__GOOGLE__ENABLED=false
EXTERNALPROVIDERS__GOOGLE__CLIENTID=
EXTERNALPROVIDERS__GOOGLE__CLIENTSECRET=
EXTERNALPROVIDERS__GOOGLE__CALLBACKPATH=/signin-google

# Optional: enable Microsoft sign-in
EXTERNALPROVIDERS__MICROSOFT__ENABLED=false
EXTERNALPROVIDERS__MICROSOFT__CLIENTID=
EXTERNALPROVIDERS__MICROSOFT__CLIENTSECRET=
EXTERNALPROVIDERS__MICROSOFT__CALLBACKPATH=/signin-microsoft

# Optional: enable Apple sign-in (either ClientSecret or PrivateKey/TeamId/KeyId)
EXTERNALPROVIDERS__APPLE__ENABLED=false
EXTERNALPROVIDERS__APPLE__CLIENTID=
EXTERNALPROVIDERS__APPLE__CLIENTSECRET=
EXTERNALPROVIDERS__APPLE__TEAMID=
EXTERNALPROVIDERS__APPLE__KEYID=
EXTERNALPROVIDERS__APPLE__PRIVATEKEY=
EXTERNALPROVIDERS__APPLE__CALLBACKPATH=/signin-apple

{
  "ConnectionStrings": {
    "Primary": "Host=localhost;Port=5432;Database=identity;Username=identity;Password=identity"
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
      }
    },
    "Enrich": ["FromLogContext"],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:O} [{Level:u3}] ({EnvironmentName}/{MachineName}) {SourceContext} - {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Properties": {
      "Application": "Identity.Base"
    }
  },
  "IdentitySeed": {
    "Enabled": false,
    "Roles": []
  },
  "Registration": {
    "ConfirmationUrlTemplate": "https://localhost:5001/account/confirm?token={token}&email={email}",
    "PasswordResetUrlTemplate": "https://localhost:5001/account/reset-password?token={token}&email={email}",
    "ProfileFields": [
      {
        "Name": "displayName",
        "DisplayName": "Display Name",
        "Required": true,
        "MaxLength": 128
      },
      {
        "Name": "company",
        "DisplayName": "Company",
        "Required": false,
        "MaxLength": 128
      }
    ]
  },
  "Cors": {
    "AllowedOrigins": [
      "https://localhost:3000",
      "https://localhost:5001",
      "http://localhost:5173"
    ]
  },
  "MailJet": {
    "FromEmail": "noreply@example.com",
    "FromName": "Identity Base",
    "ApiKey": "YOUR_MAILJET_API_KEY",
    "ApiSecret": "YOUR_MAILJET_API_SECRET",
    "Templates": {
      "Confirmation": 1000000,
      "PasswordReset": 1000001,
      "MfaChallenge": 1000002
    },
    "ErrorReporting": {
      "Enabled": false,
      "Email": "alerts@example.com"
    }
  },
  "Mfa": {
    "Issuer": "Identity Base",
    "Email": {
      "Enabled": true
    },
    "Sms": {
      "Enabled": false,
      "FromPhoneNumber": "",
      "AccountSid": "",
      "AuthToken": ""
    }
  },
  "ExternalProviders": {
    "Google": {
      "Enabled": false,
      "ClientId": "",
      "ClientSecret": "",
      "CallbackPath": "/signin-google",
      "Scopes": [
        "openid",
        "profile",
        "email"
      ]
    },
    "Microsoft": {
      "Enabled": false,
      "ClientId": "",
      "ClientSecret": "",
      "CallbackPath": "/signin-microsoft",
      "Scopes": [
        "openid",
        "profile",
        "email"
      ]
    },
    "Apple": {
      "Enabled": false,
      "ClientId": "",
      "ClientSecret": "",
      "TeamId": "",
      "KeyId": "",
      "PrivateKey": "",
      "CallbackPath": "/signin-apple",
      "Scopes": [
        "name",
        "email"
      ]
    }
  },
  "OpenIddict": {
    "Applications": [
      {
        "ClientId": "spa-client",
        "ClientType": "public",
        "RedirectUris": ["https://localhost:3000/auth/callback"],
        "PostLogoutRedirectUris": ["https://localhost:3000"],
        "Permissions": [
          "endpoints:authorization",
          "endpoints:token",
          "endpoints:userinfo",
          "grant_types:authorization_code",
          "response_types:code",
          "scopes:openid",
          "scopes:profile",
          "scopes:email",
          "scopes:offline_access",
          "scopes:identity.api"
        ],
        "Requirements": [
          "requirements:pkce"
        ]
      }
    ],
    "Scopes": [
      {
        "Name": "identity.api",
        "DisplayName": "Identity API",
        "Resources": ["identity.api"]
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}

{
  "ConnectionStrings": {
    "Primary": "Host=localhost;Port=5432;Database=identity;Username=identity;Password=identity"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    }
  },
  "IdentitySeed": {
    "Enabled": false,
    "Roles": ["Administrator"]
  },
  "Registration": {
    "ConfirmationUrlTemplate": "https://localhost:5001/account/confirm?token={token}&email={email}",
    "PasswordResetUrlTemplate": "https://localhost:5001/account/reset-password?token={token}&email={email}",
    "ProfileFields": [
      {
        "Name": "displayName",
        "DisplayName": "Display Name",
        "Required": true,
        "MaxLength": 128
      },
      {
        "Name": "company",
        "DisplayName": "Company",
        "Required": false,
        "MaxLength": 128
      }
    ]
  },
  "Cors": {
    "AllowedOrigins": [
      "https://localhost:3000",
      "https://localhost:5001"
    ]
  },
  "MailJet": {
    "FromEmail": "noreply@example.com",
    "FromName": "Identity Base",
    "ApiKey": "dev-api-key",
    "ApiSecret": "dev-api-secret",
    "Templates": {
      "Confirmation": 1234,
      "PasswordReset": 5678
    },
    "ErrorReporting": {
      "Enabled": true,
      "Email": "identity-alerts@example.com"
    }
  },
  "OpenIddict": {
    "Applications": [
      {
        "ClientId": "spa-client",
        "ClientType": "public",
        "RedirectUris": ["https://localhost:3000/auth/callback"],
        "PostLogoutRedirectUris": ["https://localhost:3000"],
        "Permissions": [
          "endpoints:authorization",
          "endpoints:token",
          "endpoints:userinfo",
          "grant_types:authorization_code",
          "response_types:code",
          "scopes:openid",
          "scopes:profile",
          "scopes:email",
          "scopes:offline_access",
          "scopes:identity.api"
        ],
        "Requirements": [
          "requirements:pkce"
        ]
      }
    ],
    "Scopes": [
      {
        "Name": "identity.api",
        "DisplayName": "Identity API",
        "Resources": ["identity.api"]
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}
